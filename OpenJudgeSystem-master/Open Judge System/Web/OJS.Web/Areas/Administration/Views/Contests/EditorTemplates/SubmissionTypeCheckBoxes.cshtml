@using Resource = Resources.Areas.Administration.Contests.Views.EditorTemplates.SubmissionTypeCheckBoxes;
@model IList<OJS.Web.Areas.Administration.ViewModels.SubmissionType.SubmissionTypeViewModel>

@for (int i = 0; i < Model.Count(); i++)
{
    <div class="row">
        <div class="editor-label col-xs-3">
            <div class="pull-right">
                @Html.HiddenFor(m => Model[i].Id)
                @Html.HiddenFor(m => Model[i].Name)
                @Html.LabelFor(m => Model[i].IsChecked, Model[i].Name)
            </div>
        </div>
        <div class="editor-field col-xs-4">
            @Html.EditorFor(m => Model[i].IsChecked, new { @class = "form-control pull-left full-editor" })
        </div>
        <div class="editor-field col-xs-4">
            <span class="glyphicon glyphicon-question-sign text-primary" title="@string.Format("{0} {1}", Resource.Allow_submission, Model[i].Name)" data-tooltip="true"></span>
        </div>
    </div>
}
